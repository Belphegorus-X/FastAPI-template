# postgres

POSTGRES_HOSTNAME="127.0.0.1"
POSTGRES_USERNAME="postgres"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="postgres"
POSTGRES_PORT="5432"

# apps

SECURITY__JWT_ISSUER="realtime-chat-app"
SECURITY__JWT_SECRET_KEY=""
# 24 * 60 * 60 = 1d
SECURITY__JWT_ACCESS_TOKEN_EXPIRE_SECS="86400"
# 24 * 60 * 60 * 28 = 28d
SECURITY__JWT_REFRESH_TOKEN_EXPIRE_SECS="2419200"
SECURITY__JWT_PASSWORD_BCRYPT_ROUNDS="16"
SECURITY__BACKEND_CORS_ORIGINS='["http://localhost:3000","http://localhost:8000"]'
SECURITY__ALLOWED_HOSTS='["localhost","127.0.0.1"]'

DATABASE__HOSTNAME=${POSTGRES_HOSTNAME}
DATABASE__USERNAME=${POSTGRES_USERNAME}
DATABASE__PASSWORD=${POSTGRES_PASSWORD}
DATABASE__PORT=${POSTGRES_PORT}
DATABASE__DATABASE=${POSTGRES_DATABASE}

CONNECTION__POOL_PRE_PING="true"
CONNECTION__POOL_SIZE="100"
CONNECTION__MAX_OVERFLOW="100"
CONNECTION__POOL_TIMEOUT="30.0"
CONNECTION__POOL_RECYCLE="60"

HTTP__HOSTNAME="127.0.0.1"
HTTP__PORT="8000"
HTTP__RELOAD="false"
